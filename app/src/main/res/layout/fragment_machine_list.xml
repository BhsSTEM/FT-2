<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MachineListFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D3D3D3">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:paddingLeft="0dp"
            android:paddingRight="190dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            android:layout_marginLeft="0dp"
            android:background="@color/cardview_light_background"
            android:textSize="40sp"
            android:text="Machines"
            />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:background="@color/cardview_light_background"
            android:layout_height="60dp"
            android:src="@drawable/search_icon"
            app:layout_constraintTop_toTopOf="@id/titleText"
            app:layout_constraintStart_toEndOf="@+id/titleText"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <ImageView
            android:id="@+id/filter"
            android:layout_width="30dp"
            android:background="@color/cardview_light_background"
            android:layout_height="60dp"
            android:src="@drawable/filter"
            app:layout_constraintTop_toTopOf="@id/titleText"
            app:layout_constraintStart_toEndOf="@id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/titleText"
            />
        <TextView
            android:id="@+id/bottomText"
            android:textSize="20dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:background="@color/cardview_light_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/displayBy"
            android:textSize="20dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:background="@color/cardview_light_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toEndOf="@id/bottomText"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="16dp"
            />


        <TextView
            android:id="@+id/filterBy"
            android:textSize="20dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:background="@color/cardview_light_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toEndOf="@id/displayBy"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="50dp"
            />
    <LinearLayout
        android:id="@+id/filterContainer"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingBottom="10dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintTop_toBottomOf="@id/displayBy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/machineInfo"
            android:textSize="20dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Machine 1\n\nOperator: \n \nMachine Age:\ "
            android:maxLines="6"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/map_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp" />

            <Button
                android:id="@+id/idle_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Idle"
                android:layout_marginRight="16dp" />
        </LinearLayout>


    </LinearLayout>


        <LinearLayout
            android:id="@+id/filterContainer2"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/rounded_background"
            app:layout_constraintTop_toBottomOf="@id/filterContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/machineInfo2"
                android:textSize="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Machine 2\n\nOperator: \n \nMachine Age:\ "
                android:maxLines="6"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/map_button2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Location"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp" />

                <Button
                    android:id="@+id/idle_button2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Idle"
                    android:layout_marginRight="16dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/filterContainer3"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/rounded_background"
            app:layout_constraintTop_toBottomOf="@id/filterContainer2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/machineInfo3"
                android:textSize="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Machine 3\n\nOperator: \n \nMachine Age:\ "
                android:maxLines="6"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/map_button3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Location"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp" />

                <Button
                    android:id="@+id/idle_button3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Idle"
                    android:layout_marginRight="16dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/filterContainer4"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/rounded_background"
            app:layout_constraintTop_toBottomOf="@id/filterContainer3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/machineInfo4"
                android:textSize="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Machine 4\n\nOperator: \n \nMachine Age:\ "
                android:maxLines="6"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/map_button4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Location"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp" />

                <Button
                    android:id="@+id/idle_button4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Idle"
                    android:layout_marginRight="16dp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>